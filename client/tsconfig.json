{
  "compilerOptions": {
    "target": "ESNext", // 目标 JavaScript 版本
    "module": "ESNext", // 模块系统
    "jsx": "react-jsx", // 支持 JSX 的处理方式
    "allowJs": true, // 允许在项目中使用 JavaScript 文件
    "esModuleInterop": true, // 支持 ES 模块和 CommonJS 混用
    "strict": false, // 启用严格模式
    "moduleResolution": "node", // 模块解析方式
    "skipLibCheck": true, // 跳过对库文件的类型检查
    "resolveJsonModule": true, // 允许导入 JSON 文件
    "lib": ["ESNext", "DOM"], // 包含的库文件
    "baseUrl": ".", // 基础路径
    "paths": {
      "@/*": ["src/*"] // 路径别名
    }
  },
  // "include": ["src/**/*.tsx", "src/**/*.jsx", "src/**/*.ts", "src/**/*.js"], // 包含的文件
  "exclude": ["node_modules", "build", "styles", "public", "docs"] // 排除的文件夹
}
